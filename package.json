{
  "name": "graphql-auth",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsnd --no-notify --respawn --transpile-only ./src",
    "build": "tsc",
    "test": "dotenv -e .env.test -- jest",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "debug": "tsnd --inspect --respawn --transpile-only ./src",
    "prebuild": "run-s clean generate:*",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "seed": "dotenv -- ts-node prisma/seed.ts",
    "clean": "rimraf dist",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only ./src/schema",
    "db:save": "yarn prisma migrate dev --create-only --preview-feature",
    "db:migrate": "yarn prisma migrate dev --preview-feature",
    "db:migrate:prod": "yarn prisma migrate deploy --preview-feature",
    "prisma": "dotenv -- prisma"
  },
  "dependencies": {
    "apollo-server": "2.19.2",
    "bcrypt": "5.0.0",
    "dotenv": "8.2.0",
    "graphql-middleware": "6.0.1",
    "graphql-shield": "7.5.0",
    "jsonwebtoken": "8.5.1",
    "nexus": "1.0.0",
    "nexus-plugin-prisma": "0.28.0"
  },
  "devDependencies": {
    "@prisma/cli": "2.14.0",
    "@prisma/client": "2.14.0",
    "@types/bcrypt": "3.0.0",
    "@types/dotenv": "8.2.0",
    "@types/eslint": "7.2.6",
    "@types/jest": "26.0.20",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "14.14.21",
    "@types/prettier": "2.1.6",
    "@types/rimraf": "3.0.0",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "cross-env": "7.0.3",
    "dotenv-cli": "4.0.0",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.1.0",
    "graphql-request": "3.3.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "jest-environment-node": "26.6.2",
    "lint-staged": "10.5.3",
    "nanoid": "3.1.20",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.1",
    "typescript": "4.1.3",
    "typesync": "0.8.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint",
    "*.{ts,js,json,md}": "prettier --write"
  }
}
